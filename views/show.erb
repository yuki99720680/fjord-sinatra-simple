<div class="row">
  <div class="col s12 m12 l12 xl12 center-align">
    <h2><%= @title %></h2>
    <a class="btn" href='/memos'>一覧</a>
    <h3><%= h(@memo[0]) %></h3>
    <p><%= h(@memo[1]) %></p>
    <a class="btn" href='/memos/<%= h(params[:memo]) %>/edit'>変更</a>
  </div>
</div>

<div class="row">
  <div class="col s12 m12 l12 xl12 center-align">
    <form method="post" action="/memos/<%= h(@memo[0]) %>">
      <input id="hidden" type="hidden" name="_method" value="delete">
      <input type= "hidden" name="memo_header" value="<%= h(@memo[0]) %>">
      <input type= "hidden" name="memo_body" value="<%= h(@memo[1]) %>">
      <input class="btn" type= "submit" value="削除">
    </form>
  </div>
</div>
