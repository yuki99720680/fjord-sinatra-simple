<div class="row">
  <div class="col s12 m12 l12 xl12 center-align">
    <h2><%= @title %></h2>
    <a class="btn" href='/memos'>一覧</a>
  </div>
</div>

<div class="row">
  <div class="col s12 m12 l12 xl12 center-align">
    <form method="post" action="/memos/<%= h(@memo['id']) %>">
      <input id="hidden" type="hidden" name="_method" value="patch">
      <input type="hidden" name="memo_id" value="<%= h(@memo['id']) %>">
      <div class="input-field">
        <input type="text" name="memo_header" id="memo_header" value="<%= h(@memo['header']) %>">
        <label for="memo_header" class="active">Header</label>
      </div>
      <div class="input-field">
        <textarea class="materialize-textarea" name="memo_body" id="memo_body" rows="5"><%= h(@memo['body']) %></textarea>
        <label for="memo_body" class="active">Body</label>
      </div>
      <input class="btn" type= "submit" value="変更">
    </form>
  </div>
</div>
